grammar Logic

  rule decision
    and_statement
    /
    or_statement
    /
    condition
  end

  rule and_statement
    condition and condition <Decision>
  end

  rule or_statement
    condition or condition <Decision>
  end

  rule condition
    [A-Za-z]+ <Condition>
  end

  rule and
    S 'and' S <AndStatement>
  end

  rule or
    S 'or' S <OrStatement>
  end

  rule s # Optional space
    S?
  end
 
  rule S # Mandatory space
    [ \t\n\r]+
  end
 
end
