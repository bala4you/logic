require 'logic_testing'

grammar Logic

  rule decision
    and_statement
    /
    condition
  end

  rule and_statement
    operand_1:condition S operator S operand_2:condition <Decision>
  end

  rule condition
    [A-Za-z]+ <Condition>
  end

  rule operator
    ( and / or ) <NonCondition>
  end

  rule and
    'and' {
      def apply(a, b)
        a & b
      end
    }
  end

  rule or
    'or' {
      def apply(a, b)
        a | b
      end
    }
  end

  rule s # Optional space
    S?
  end
 
  rule S # Mandatory space
    [ \t\n\r]+ <NonCondition>
  end
 
end
