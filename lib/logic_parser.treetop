grammar Logic

  rule decision
    (or_statement
    /
     condition) <Decision>
  end

  rule or_statement
    condition or condition {
      def conditions
        elements.map(&:conditions).flatten
      end
    }
  end

  rule condition
    [A-Za-z]+ {
      def conditions
        [text_value]
      end
    }
  end

  rule or
    S 'or' S {
      def conditions
        []
      end
    }
  end

  rule s # Optional space
    S?
  end
 
  rule S # Mandatory space
    [ \t\n\r]+
  end
 
end
